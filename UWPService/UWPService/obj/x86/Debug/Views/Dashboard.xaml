<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPService.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:charts="using:CrossPieCharts.UWP.PieCharts"
    xmlns:WinRT="using:Controls.DataVisualization.Toolkit"
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    xmlns:Controls="using:WinRTXamlToolkit.Controls"
    x:Class="UWPService.Views.Dashboard"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <FlipView BorderBrush="#FF122940" BorderThickness="1">
            <RelativePanel x:ConnectionId='1' x:Name="MyRelativePanel" Margin="10">
                <Charting:Chart x:ConnectionId='3' x:Name="AreaChart" Width="1000" Height="500" RelativePanel.AlignHorizontalCenterWithPanel="True" >
                    <Charting:AreaSeries Title="Vente" IndependentValuePath="ProductName" DependentValuePath="Count" IsSelectionEnabled="True"/>
                </Charting:Chart>
                <TextBlock x:ConnectionId='4' x:Name="Suivant" RelativePanel.Below="AreaChart" RelativePanel.AlignHorizontalCenterWithPanel="True" FontFamily="Segoe MDL2 Assets" Text="&#xE893;"                                         FontSize="22" Margin="10,0,0,0"                                                                              />
                <TextBlock x:ConnectionId='5' x:Name="Precedent" RelativePanel.Below="AreaChart" RelativePanel.LeftOf="Suivant" FontFamily="Segoe MDL2 Assets" Text="&#xE892;"                                           FontSize="22"                                                                                   />
            </RelativePanel>
            <RelativePanel>
                <Charting:Chart x:ConnectionId='2' x:Name="PieChart" RelativePanel.AlignHorizontalCenterWithPanel="True" Width="600" Height="600">
                    <Charting:PieSeries Title="Résultat" IndependentValuePath="Year" DependentValuePath="Amount" IsSelectionEnabled="True"/>
                </Charting:Chart>
            </RelativePanel>
        </FlipView>
    </Grid>
</Page>

