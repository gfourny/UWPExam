<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPService.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:charts="using:CrossPieCharts.UWP.PieCharts"
    xmlns:Gauges="using:DevExpress.UI.Xaml.Gauges"
    xmlns:WinRT="using:Controls.DataVisualization.Toolkit"
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    xmlns:Controls="using:WinRTXamlToolkit.Controls"
    x:Class="UWPService.Views.Dashboard"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel x:ConnectionId='1' x:Name="MyRelativePanel" Margin="10">
            <charts:RichPieChart x:ConnectionId='2' x:Name="NbVente" Radius="50" StrokeThickness="90" Margin="0,0,100,0"/>
            <charts:PieChart x:ConnectionId='3' x:Name="Achat" Radius="43" Percentage="78" StrokeThickness="7" RelativePanel.AlignRightWith="NbVente" RelativePanel.AlignVerticalCenterWith="NbVente"/>
            <Charting:Chart x:ConnectionId='4' x:Name="AreaChart" RelativePanel.RightOf="Achat" RelativePanel.AlignVerticalCenterWith="Achat">
                <Charting:AreaSeries Title="Vente" IndependentValueBinding="{Binding Vente}" DependentValueBinding="{Binding Vente}" IsSelectionEnabled="True"/>
            </Charting:Chart>
        </RelativePanel>
    </Grid>
</Page>

